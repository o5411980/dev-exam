<p id="notice"><%= notice %></p>

<p>
  <span>
    <strong>物件名:</strong>
    <%= @property.property_name %>
  </span>
</p>

<p>
  <span>
    <strong>賃料:</strong>
    <%= @property.rent %>円
  </span>
</p>

<p>
  <span>
    <strong>住所:</strong>
    <%= @property.street_address %>
  </span>
</p>

<p>
  <span>
    <strong>築年数:</strong>
    <%= @property.age %>年
  </span>
</p>

<p>
  <span>
    <strong>備考:</strong>
    <%= @property.note %>
  </span>
</p>

<hr color="#c0c0c0">
<p class="no-indent">最寄り駅登録数: <%= @property.nearest_stations.size %></p>
<% if @property.nearest_stations.any? %>
  <% @nearest_stations.each do |nearest_station| %>
    <strong>最寄り駅<%= 1 + @nearest_stations.index(nearest_station) %></strong>
    <div class="route"><br>
      <span>
        <strong>路線名</strong>
        <%= nearest_station.route %>
      <span>
    </div>

    <div class="station">
      <span>
        <strong>駅名</strong>
        <%= nearest_station.station %>
      <span>
    </div>

    <div class="minutes_walk">
      <span>
        <strong>徒歩分数</strong>
        <%= nearest_station.minutes_walk %>分
      <span>
    </div>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
