<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @property.street_address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>

<hr color="#c0c0c0">

<% if @property.nearest_stations.any? %>
  <% @nearest_stations.each do |nearest_station| %>
    <strong>最寄り駅<%= 1 + @nearest_stations.index(nearest_station) %></strong>
    <div class="route">
      <strong>路線名</strong>
      <%= nearest_station.route %>
    </div>
    <div class="station">
      <strong>駅名</strong>
      <%= nearest_station.station %>
    </div>
    <div class="minutes_walk">
      <strong>徒歩分数</strong>
      <%= nearest_station.minutes_walk %>分
    </div>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
